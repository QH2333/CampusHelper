<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.swjtu">

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="校园通">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LivePayActivity"
            android:label="生活缴费"
            android:theme="@style/SettingsTheme2" />
        <activity
            android:name=".CardPayActivity"
            android:label="一卡通充值"
            android:theme="@style/OneCardTheme" />
        <activity
            android:name=".GradeActivity"
            android:label="成绩查询"
            android:theme="@style/ScoreTheme" />
        <activity
            android:name=".LessonActivity"
            android:label="课程查询"
            android:theme="@style/LessonTheme" />
        <activity
            android:name=".ELePayActivity"
            android:label="电费充值"
            android:theme="@style/EleTheme" />
        <activity
            android:name=".WaterPayActivity"
            android:label="水卡充值"
            android:theme="@style/WaterTheme" />
        <activity
            android:name=".AboutActivity"
            android:label="关于"
            android:theme="@style/SettingsTheme" />
        <activity
            android:name=".settingsActivity"
            android:label="设置"
            android:theme="@style/SettingsTheme" />
        <activity
            android:name=".profileActivity"
            android:label="个人资料"
            android:theme="@style/LoginTheme" />
        <activity
            android:name=".LoginActivity"
            android:label="登录"
            android:theme="@style/LoginTheme" />
    </application>

</manifest>