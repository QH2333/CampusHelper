<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutActivity">

    <Button
        android:id="@+id/about1"
        android:gravity="left"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="389dp"
        android:layout_height="wrap_content"
        android:text="帮助"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="get_help"/>

    <View
        android:id="@+id/view10"
        android:layout_width="match_parent"
        android:layout_height="2px"

        android:background="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/about1" />

    <Button
        android:id="@+id/about2"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="389dp"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="反馈"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view10"
        android:onClick="send_feedback"/>

    <View
        android:id="@+id/view11"
        android:layout_width="match_parent"
        android:layout_height="2px"

        android:background="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/about2" />
    <Button
        android:id="@+id/about3"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="389dp"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="更新日志"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view11"
        android:onClick="check_update"/>

    <View
        android:id="@+id/view12"
        android:layout_width="match_parent"
        android:layout_height="2px"

        android:background="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/about3" />
    <Button
        android:id="@+id/about4"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="389dp"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="关于我们"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view12"
        android:onClick="about_us"/>

    <View
        android:id="@+id/view13"
        android:layout_width="match_parent"
        android:layout_height="2px"

        android:background="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/about4" />


</android.support.constraint.ConstraintLayout>